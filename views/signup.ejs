<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/style.css" rel="stylesheet" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!--script da msg de confirmação-->
    <link
      rel="shortcut icon"
      type="image/x-png"
      href="/img/logo 1.png"
      width="100px"
    />
    <title>Sign-up</title>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <section id="register">
        <h1>NOVO REGISTRO!</h1>
      </section>
      <section id="formulario">
        <form id="form" action="/cadastro" method="post">
          <input
            type="url"
            name="img"
            id="img"
            required
            placeholder="LinkDaImagem"
          />

          <input
            type="text"
            id="nome"
            name="nome"
            required
            placeholder="Nome"
          />

          <input
            type="text"
            name="descricao"
            id="descricao"
            required
            placeholder="Descrição"
          />

          <input
            min="1"
            type="number"
            name="preco"
            id="preco"
            required
            placeholder="Preço"
          />
          <section id="botton_cadastro">
            <button id="button_submit" type="submit">Cadastar</button>
          </section>
        </form>
      </section>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
  <script src="/js/script.js"></script>

  <% if (isAdded) { %> <!--mensagem de confirmação -->
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Sucesso!!!',
            text: 'Item Cadastrado!!',
        })
    </script>
<% } %>

</html>